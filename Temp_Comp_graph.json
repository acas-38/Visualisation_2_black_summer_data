{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "vconcat": [
    {
      "hconcat": [
        {
          "width": 150, "height": 100,
          "data": {
            "url": "https://raw.githubusercontent.com/acas-38/Visualisation_2_black_summer_data/refs/heads/main/Temp_ave.csv",
            "format": {"type": "csv"}
          },
          "transform": [
            {"filter": "datum.city === 'Adelaide'"},
            {"fold": ["ave_max_temp", "expected temp"], "as": ["Type", "Temperature"]}
          ],
          "mark": {"type": "line", "interpolate": "monotone", "point": true},
          "encoding": {
            "x": {
              "field": "month",
              "type": "ordinal",
              "sort": ["Sep", "Oct", "Nov", "Dec", "Jan", "Feb"],
              "title": "Month"
            },
            "y": {
              "field": "Temperature",
              "type": "quantitative",
              "title": "Temperature (°C)"
            },
            "color": {
              "field": "Type",
              "type": "nominal",
              "title": "Temperature Type",
              "scale": {
                "domain": ["ave_max_temp", "expected temp"],
                "range": ["#e25822", "#333"]
              },
              "legend": {
                "labelFontSize": 11,
                "orient": "bottom",
                "direction": "horizontal",
                "labelExpr": "datum.label === 'ave_max_temp' ? 'Actual Temperature' : datum.label === 'expected temp' ? 'Expected Temperature' : datum.label"
              }
            },
            "strokeDash": {
              "field": "Type",
              "type": "nominal",
              "scale": {
                "domain": ["ave_max_temp", "expected temp"],
                "range": [[], [4, 2]]
              }
            }
          },
          "title": "Adelaide"
