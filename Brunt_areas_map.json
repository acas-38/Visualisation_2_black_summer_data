{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 700,
  "title": "AUS GEEBAM Burnt Area Outlines with Capitals",
  "projection": { "type": "mercator", "center": [135, -30], "scale": 850 },
  "layer": [
    {
      "data": { "values": [{}] },
      "mark": { "type": "rect", "color": "#b3d9ff" },
