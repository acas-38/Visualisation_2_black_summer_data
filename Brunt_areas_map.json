{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 700,
  "title": "Australian GEEBAM Burnt Areas with States and Capitals",
  "projection": { "type": "mercator", "center": [135, -30], "scale": 850 },
  "layer": [
    {
      "data": {
        "url": "https://cdn.jsdelivr.net/npm/world-atlas@2/land-110m.json",
        "format": { "type": "topojson", "feature": "land" }
      },
      "mark": { "type": "geoshape", "fill": "#0ebb39d2", "stroke": "#aaaaaa", "strokeWidth": 0.5 }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
        "format": { "type": "json", "property": "features" }
      },
      "mark": { "type": "geoshape", "fill": "none", "stroke": "#333", "strokeWidth": 0.7 }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/acas-38/Visualisation_2_black_summer_data/c83629aeee959d719fbea3177d89bff11a3ce5fe/burnt_area_small.geojson",
        "format": { "type": "json", "property": "features" }
      },
      "mark": { "type": "geoshape", "fill": "none", "stroke": "red", "strokeWidth": 0.8 }
    },
    {
      "data": {
        "values": [
          { "city": "Canberra",  "lon": 149.13, "lat": -35.28 },
          { "city": "Sydney",    "lon": 151.21, "lat": -33.87 },
          { "city": "Melbourne", "lon": 144.96, "lat": -37.81 },
          { "city": "Brisbane",  "lon": 153.03, "lat": -27.47 },
          { "city": "Perth",     "lon": 115.86, "lat": -31.95 },
          { "city": "Adelaide",  "lon": 138.60, "lat": -34.93 },
          { "city": "Hobart",    "lon": 147.33, "lat": -42.88 },
          { "city": "Darwin",    "lon": 130.84, "lat": -12.46 }
        ]
      },
      "layer": [
        {
          "mark": { "type": "circle", "color": "red", "size": 40 },
          "encoding": {
            "longitude": { "field": "lon", "type": "quantitative" },
            "latitude": { "field": "lat", "type": "quantitative" }
          }
        },
        {
          "mark": { "type": "text", "fontSize": 11, "fontWeight": "bold", "dy": -6 },
          "encoding": {
            "longitude": { "field": "lon", "type": "quantitative" },
            "latitude": { "field": "lat", "type": "quantitative" },
            "text": { "field": "city" },
            "color": { "value": "black" }
          }
        }
      ]
    },
    {
      "data": {
        "values": [
          { "state": "Western Australia", "lon": 121, "lat": -25 },
          { "state": "Northern Territory", "lon": 133, "lat": -19 },
          { "state": "Queensland", "lon": 146, "lat": -21 },
          { "state": "South Australia", "lon": 136, "lat": -30 },
          { "state": "New South Wales", "lon": 146, "lat": -32 },
          { "state": "Victoria", "lon": 145, "lat": -37 },
          { "state": "Tasmania", "lon": 147, "lat": -42 }
        ]
      },
      "mark": { "type": "text", "fontSize": 12, "fontWeight": "bold", "color": "#222" },
      "encoding": {
        "longitude": { "field": "lon", "type": "quantitative" },
        "latitude": { "field": "lat", "type": "quantitative" },
        "text": { "field": "state" }
      }
    }
  ],
  "config": { "view": { "stroke": null } }
}
