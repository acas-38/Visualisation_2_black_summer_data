{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 950,
  "height": 700,
  "title": "AUS GEEBAM Burnt Areas with State Borders",
  "projection": {"type": "mercator", "center": [135, -30], "scale": 800},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/acas-38/Visualisation_2_black_summer_data/main/burnt_area_small.geojson",
        "format": {"type": "json", "property": "features"}
      },
     
      "mark": {
        "type": "geoshape",
        "fill": "null",
        "stroke": "#000000",
        "strokeWidth": 0.7
      }
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/rowanhogan/australian-states/master/states.geojson",
        "format": {"type": "json"}
      },
      "mark": {
        "type": "geoshape",
        "fill": "none",
        "stroke": "#444444",
        "strokeWidth": 1.2
      }
    }
  ],
  "config": {"view": {"stroke": null}}
}
